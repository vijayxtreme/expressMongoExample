extends ../layout

block content
  h1 Your Tasks

  - if(docs.length)
    table
        tr
            th Task
            th Edit 
            th Deleted
                each task in docs
                    tr 
                        td #{task.task}
                        td
                            a.btn(href='/tasks/#{task.id}/edit') Edit
                        td
                            a.btn(href='/tasks/#{task.id}/del') Del

  - else
    p You don't have any tasks!

  p
    a(href='/tasks/new', class='btn primary') Add a Task